<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">20sp</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- background color in dark mode-->
    <style name="backgroundScreen" parent="Theme.Calculator">

        <item name="android:background">@color/black</item>

    </style>

    <!-- background color in dark mode-->
    <style name="rowContainer" parent="Theme.Calculator">

        <item name="android:backgroundTint">@color/black</item>

    </style>

    <!-- all rows container color in dark mode-->
    <style name="allRowsContainer" parent="Theme.Calculator">

        <item name="android:backgroundTint">@color/lightBlack</item>
    </style>

    <!-- buttons color in dark mode-->
    <style name="Buttons" parent="Theme.Calculator">
        <item name="android:backgroundTint">@color/lightBlack</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text color in dark mode-->
    <style name="TextColor" parent="Theme.Calculator">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text color in dark mode-->
    <style name="TextColorOperation1" parent="Theme.Calculator">
        <item name="android:textColor">@color/LightGreen</item>
        <item name="android:textSize">30sp</item>

    </style>

    <!-- Text color in dark mode-->
    <style name="TextColorOperation2" parent="Theme.Calculator">
        <item name="android:textColor">@color/lightRed</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="mode_img" parent="Theme.Calculator">
        <item name="android:tint">@color/white</item>

    </style>
    <style name="mode_background" parent="Theme.Calculator">
        <item name="android:backgroundTint">@color/modeColor</item>

    </style>
</resources>